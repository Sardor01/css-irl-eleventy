{% extends "./layout.njk" %}

{% block content %}
  <div class="page-content">
    <div class="container">
      {% if featuredImage %}
        <img src="{{ featuredImage }}" alt="">
      {% endif %}
      <ul>
        {% for tag in tags %}
          {% if tag != 'post' %}
            {{ tag }}
          {% endif %}
        {% endfor %}
      </ul>
      <h1>{{ title }}</h1>
      <div>
        <time>{{ page.date.toDateString() }}</time>
      </div>
    </div>

    <div class="container-sm">
      <div class="o-richtext">
        {{ content | safe }}
      </div>
    </div>

    <div class="container-sm">
      {% set slug = '/' + title|slug + '/' %}
      {% for post in collections.post %}
        {% if post.url == slug %}
          {% set prevPost = collections.post[loop.index0 - 1] %}
          {% if prevPost %}
            <a href="{{ prevPost.url }}">Previous:
              {{ prevPost.data.title }}</a>
          {% endif %}

          {% set nextPost = collections.post[loop.index0 + 1] %}
          {% if nextPost %}
            <a href="{{ nextPost.url }}">Next:
              {{ nextPost.data.title }}</a>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>


  </div>
{% endblock %}
