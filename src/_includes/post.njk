<!DOCTYPE html>
<html lang="en-GB">
  {% set pathToLinkedFiles = '..' %}
  {% include "./partials/siteHead.njk" %}

  <body>
    <div class="hidden">
      {% include './partials/sprite.svg' %}
    </div>

    {% set showHomeLink = true %}
    {% include "./partials/header.njk" %}

    <div class="page-content">
      <div class="container o-richtext">
        <p>---“Post” layout---</p>
        {% if featuredImage %}
          <img src="{{ featuredImage }}" alt="">
        {% endif %}
        <h1>{{ title }}</h1>
        <div>
          <time>{{ date }}</time>
        </div>
        {{ content | safe }}
      </div>
    </div>

    {% include "./partials/footer.njk" %}

    <!--JS-->
    <script src="../index.js"></script>
  </body>
</html>